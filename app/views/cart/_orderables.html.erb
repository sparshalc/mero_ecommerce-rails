

<section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
        <% @cart.orderables.each do|orderable| %>
        <% product = orderable.product%>
          <div class="card mb-4">
            <div class="card-body">
              <!-- Single item -->
              <div class="row">
                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                  <!-- Image -->
                  <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                      <%= image_tag(product.image, class: 'w-100')%>
                    <a href="#!">
                      <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                    </a>
                  </div>
                  <!-- Image -->
                </div>

                <div class="col-lg-8 col-md-6 mb-4 mb-lg-0">
                    <!-- Data -->
                  <p><strong><%= product.name %></strong></p>
                  <p>रू <%= product.oriprice %></p>

                  <div class="list-group-item d-flex justify-content-start"">
                  <%= form_with(url: cart_add_path) do |f|%>
                  <%= f.number_field :quantity, value: orderable.quantity,min: 0, class: 'form-control',type: :disabled? %>
                  <% end %>
                  <%= form_with(url: cart_destroy_path) do |f|%>
                  <%= f.hidden_field :id, value: orderable.id %>
                  <%= f.button class: 'btn btn-danger mt-1 ' do%>
                  <i class="fas fa-trash"></i>
                  <% end %>
                  <% end %>
                </div>
                  <!-- Data -->
                </div>

              </div>
 
              <hr class="my-4" />
  
              <!-- Single item -->
              <!-- Single item -->
            </div>
          </div>
        <% end %>  
          <div class="card mb-4">
            <div class="card-body">
              <p><strong>Expected shipping delivery</strong></p>
              <p class="mb-0">12.10.2020 - 14.10.2020</p>
            </div>
          </div>
          <div class="card mb-4 mb-lg-0">
            <div class="card-body">
              <p><strong>We accept</strong></p>
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                alt="Visa" />
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                alt="American Express" />
              <img class="me-2" width="45px"
                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                alt="Mastercard" />
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  Products Quantity
                  <span><%= @cart.orderables.count%></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping Adress
                  <span>Naxal, Kathmandu</span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total amount</strong>
                    <strong>
                      <p class="mb-0">(including VAT)</p>
                    </strong>
                  </div>
                  <span><strong>रू<%= @cart.total %></strong></span>
                </li>
              </ul>
  
              <button type="button" class="btn btn-primary btn-lg btn-block">
                Go to checkout
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
  