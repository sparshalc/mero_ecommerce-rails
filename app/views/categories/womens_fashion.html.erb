<% if @product.present? %>
  <h3 class="title text-center mt-3 border-bottom p-3">Women's Fashion
    <div class="container col-4 col-lg-3 mt-3">
        <form role="search">
            <%= search_form_for @q do |f| %>
            <%= f.search_field :name_cont,:placeholder => 'Search by name...',class:'form-control' %>
            <% end %>
        </form>
    </div></h3>
 <% else %>
 <h1 class="display-5  lh-1 mb-3 text-center shadow p-3 mt-5"><%= image_tag('img/alert.jpg',width: '180px')%>
  No Products Here!</h1>
  <div class="container">
    <%= link_to 'Return Home', root_path, class:'btn btn-primary w-100'%>
  </div>
 <% end %>

<div class="container">
    <div class="cards my-4">
            <% @product.each do |x|%>
            <div class="card" style="width: 18rem;">
                <% if x.views > 15 %>
                 <span class="badge bg-danger">Trending</span>
                <% else %>
                    <span class="badge bg-primary">Newly Added</span>
                <% end %>
                <% if x.image.attached? %>
                    <div class="thumbnails">
                        <%= link_to image_tag(x.image, class: 'thumbnail'), product_path(x.id)%>
                    </div>
                <% end %>
            <div class="text-center">
                <p><%= x.name %></p>
                <p><strike class="text-muted">$<%= x.oriprice %></strike>    <span class="big">$<%= x.disprice%></span></p>
            </div>
        </div>
        <% end %>
    </div>
</div>
