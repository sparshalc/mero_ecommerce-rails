<style>
    .jumb{
      background-color: #212529;
      padding: 15px;
    }
      .thumbnail{
          height: 180px;
          width: auto;
          margin: 10px 10px ;
  
      }
      .card:hover{
       box-shadow: 2px 2px 3px #000000;
      }
      .big{
        font-size: 18px;
      }
      .card{
          margin: 15px;
          width: 150px;
          height: auto;
      }
      .thumbnails{
          display: flex;
          justify-content: center;
          text-align: center;
      }
  
      .cards{
          overflow: hidden;
          display: flex;
          flex-wrap: wrap;
      }
      .cont{
          background-color: #212529;
          padding: 15px 15px;
          margin: 15px 15px;
          border-radius: 15px;
          color: white;
      }
      .conte{
          background-color: #212529;
          padding: 55px;
          margin: 15px 15px;
          border-radius: 15px;
          color: white;
      }
</style>
<% if @product.present? %>
  <h3 class="title text-center mt-3 border-bottom p-3">Our Products</h3>
 <% else %>
 <h1 class="display-5  lh-1 mb-3 mt-4 text-center shadow p-3 "><%= image_tag('img/alert.jpg',width: '180px')%>
  No Products Here!</h1>
 <% end %>

<div class="container">
    <div class="cards my-4">
            <% @product.each do |x|%>
            <div class="card" style="width: 18rem;">
                <% if x.views > 15 %>
                 <span class="badge bg-danger">Trending</span>
                <% else %>
                    <span class="badge bg-primary">Newly Added</span>
                <% end %>
                <% if x.image.attached? %>
                    <div class="thumbnails">
                        <%= link_to image_tag(x.image, class: 'thumbnail'), product_path(x.id)%>
                    </div>
                <% end %>
            <div class="text-center">
                <p><%= x.name %></p>
                <p><strike class="text-muted">रू <%= x.oriprice %></strike>    <span class="big">रू <%= x.disprice%></span></p>
            </div>
        </div>
        <% end %>
    </div>
    <% if @product.present? %>
        <div class="container text-center">
            <%= link_to 'LOAD MORE', products_path,class: 'btn btn-primary w-100'%>
        </div>
    <% end %>
</div>
